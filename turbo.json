{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_ENV"],
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "dev:api": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "dev:websocket": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    }
  }
}